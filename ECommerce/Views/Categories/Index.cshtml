@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="row">
     <div class="col-md-8 offset-md-2">
         <table class="table table-striped table-hover">
             <thead>
                 <tr>
                     <th>@Html.DisplayNameFor(x=>x.Name)</th>
                     <th>@Html.DisplayNameFor(x=>x.Description)</th>
                     <th>Action</th>
                 </tr>
             </thead>
             <tbody>
               @foreach(var item in Model)
                   {
                       <tr>
                        <td>@Html.DisplayFor(x=>item.Name)</td>
                        <td>@Html.DisplayFor(x=>item.Description)</td>
                        <td>
                            <a class="ed btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-regular fa-pencil mr-2"></i>Edit</a>
                            <a class="ed btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-regular fa-eye mr-2"></i>Details</a>
                            <a  class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-regular fa-trash mr-2" value="Delete"  
                                onclick="return confirm('Are You Sure Want To Delete This Category?')"></i>
                               <input id="delCat" type="submit" value="Delete" class="btn btn-outline-danger "
                               onclick="return confirm('Are You Sure Want To Delete This Category?')"/>
                               </a>
                              
                        </td>
                       </tr>
                   }
             </tbody>
         </table>
     </div>
</div>

@await Html.PartialAsync("_CreateItem", "Categories")


<style>
    #delCat{
        border:hidden;
        padding-left: 4px;
    }
    .ed{
        height: 50px;
        width: 100px;
        align-content: center;
    }
</style>
