@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="row">
     <div class="col-md-8 offset-md-2">
         <table class="table table-striped table-hover">
             <thead>
                 <tr>
                     <th>@Html.DisplayNameFor(x=>x.Name)</th>
                     <th>@Html.DisplayNameFor(x=>x.Description)</th>
                     <th>Action</th>
                 </tr>
             </thead>
             <tbody>
               @foreach(var item in Model)
                   {
                       <tr>
                        <td>@Html.DisplayFor(x=>item.Name)</td>
                        <td>@Html.DisplayFor(x=>item.Description)</td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-regular fa-pencil mr-2"></i>Edit</a>
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-regular fa-eye mr-2"></i>Details</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                               @* <i class="fas fa-regular fa-trash mr-2" onclick="return confirm('Are You Sure Want To Delete This Category?')"></i>Delete*@
                               <input type="submit" value="Delete" onclick="return confirm('Are You Sure Want To Delete This Category?')"/>
                               </a>
                        </td>
                       </tr>
                   }
             </tbody>
         </table>
     </div>
</div>
<div class="text-white" style="position:fixed;right:30px;bottom:100px;">
    <a class="btn btn-outline-success" asp-action="Create" asp-controller="Categories">
        <i class="fas fa-regular fa-plus-square mr-3"></i>
        Create</a>
</div>
