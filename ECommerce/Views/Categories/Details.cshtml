@model Category

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Details of - @Model.Name - Category </h1>
        </p>
    </div>
    <div class="col-md-8 offset-2"> 
        <form asp-action="Details">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="Name" class="controle-lable"></label>
                <input asp-for="Name" class="form-control" autocomplete="off"  readonly/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="controle-lable"></label>
                <textarea asp-for="Description" class="form-control" rows=3 readonly></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-secondary">Show All Category</a>
                <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@Model.Id" style="float:right"><i class="fas fa-regular fa-pencil"></i></a>
            </div>
        </form>
    </div>

</div>