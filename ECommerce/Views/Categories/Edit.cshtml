@model Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h1 class="text-center">Edit @Model.Name Category</h1>
        </p>
    </div>
    <div class="col-md-6 offset-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="controle-lable"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="controle-lable"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="Index">Show All Category</a>
                <input type="submit"  value="Update" class="btn btn-outline-info  float-right"/>
            </div>
        </form>
    </div>

</div>

@section Scripts{
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}