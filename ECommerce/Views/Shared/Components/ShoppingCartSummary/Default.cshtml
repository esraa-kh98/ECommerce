@model int

<link href="@Url.Content("/css/site.css")" rel="stylesheet" />


@if(Model>0){
<li class="nav-item" >
    <a class="nav-link text-dark" asp-controller="Orders" asp-action="ShoppingCart">
        <i class="shop fas fa-regular fa-shopping-basket">
          @Model
        </i>
        <b class="text-dark">@(ViewBag.Total.ToString("c"))</b>
    </a>
</li>
}
<style>
    .shop{
        color: #dc3545;
    }
</style>